{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
  }
}